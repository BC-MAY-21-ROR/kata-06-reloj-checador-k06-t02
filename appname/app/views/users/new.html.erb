<div id="clearance" class="form-signin text-center ">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>

    <div class="container-md w-50 my-5">
      <%= render partial: '/users/form', object: form %>

      <div class="my-3 submit-field">
        <%= form.submit 'Sign Up', :class => 'w-50 btn btn-lg btn-primary' %>
      </div>

      <div class="other-links">
        <%= link_to t(".sign_in"), sign_in_path %>
      </div> 
    </div>    

  <% end %>
</div>
