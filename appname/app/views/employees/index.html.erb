<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<br>

<button> <%= link_to 'New Employee', new_employee_path %></button>
 
<br>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Num employee</th>
      <th>Private num</th>
      <th>Name</th>
      <th>Email</th>
      <th>Position</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.num_employee %></td>
        <td><%= employee.private_num %></td>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.position %></td>
        <td><%= employee.status %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


